<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Barre d'action -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- ScrollView horizontal pour le mode paysage -->
    <HorizontalScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/horizontal_scroll_description"
        android:scrollbars="horizontal"
        app:layout_constraintTop_toBottomOf="@id/appbarlayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- Alternance de couleurs avec 20 vues VERTICALES en paysage -->
            <View
                android:layout_width="@dimen/finger_size"
                android:layout_height="match_parent"
                android:background="@color/mycolor1" />

            <View
                android:layout_width="@dimen/finger_size"
                android:layout_height="match_parent"
                android:background="@color/mycolor2" />

            <View
                android:layout_width="@dimen/finger_size"
                android:layout_height="match_parent"
                android:background="@color/mycolor1" />

            <View
                android:layout_width="@dimen/finger_size"
                android:layout_height="match_parent"
                android:background="@color/mycolor2" />

            <View
                android:layout_width="@dimen/finger_size"
                android:layout_height="match_parent"
                android:background="@color/mycolor1" />

            <View
                android:layout_width="@dimen/finger_size"
                android:layout_height="match_parent"
                android:background="@color/mycolor2" />

            <View
                android:layout_width="@dimen/finger_size"
                android:layout_height="match_parent"
                android:background="@color/mycolor1" />

            <View
                android:layout_width="@dimen/finger_size"
                android:layout_height="match_parent"
                android:background="@color/mycolor2" />

            <View
                android:layout_width="@dimen/finger_size"
                android:layout_height="match_parent"
                android:background="@color/mycolor1" />

            <View
                android:layout_width="@dimen/finger_size"
                android:layout_height="match_parent"
                android:background="@color/mycolor2" />

            <View
                android:layout_width="@dimen/finger_size"
                android:layout_height="match_parent"
                android:background="@color/mycolor1" />

            <View
                android:layout_width="@dimen/finger_size"
                android:layout_height="match_parent"
                android:background="@color/mycolor2" />

            <View
                android:layout_width="@dimen/finger_size"
                android:layout_height="match_parent"
                android:background="@color/mycolor1" />

            <View
                android:layout_width="@dimen/finger_size"
                android:layout_height="match_parent"
                android:background="@color/mycolor2" />

            <View
                android:layout_width="@dimen/finger_size"
                android:layout_height="match_parent"
                android:background="@color/mycolor1" />

            <View
                android:layout_width="@dimen/finger_size"
                android:layout_height="match_parent"
                android:background="@color/mycolor2" />

            <View
                android:layout_width="@dimen/finger_size"
                android:layout_height="match_parent"
                android:background="@color/mycolor1" />

            <View
                android:layout_width="@dimen/finger_size"
                android:layout_height="match_parent"
                android:background="@color/mycolor2" />

            <View
                android:layout_width="@dimen/finger_size"
                android:layout_height="match_parent"
                android:background="@color/mycolor1" />

            <View
                android:layout_width="@dimen/finger_size"
                android:layout_height="match_parent"
                android:background="@color/mycolor2" />

        </LinearLayout>

    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>